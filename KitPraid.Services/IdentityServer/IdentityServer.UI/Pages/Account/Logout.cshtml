@page
@model IdentityServer.UI.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Logout";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h2>Logout</h2>
            </div>
            <div class="card-body">
                @if (Model.ShowLogoutPrompt)
                {
                    <p>Are you sure you want to logout?</p>
                    <form method="post">
                        <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                        <div class="form-group mb-3">
                            <button type="submit" class="btn btn-primary w-100">Yes, Logout</button>
                        </div>
                        <div class="form-group">
                            <a href="javascript:history.back()" class="btn btn-secondary w-100">Cancel</a>
                        </div>
                    </form>
                }
                else
                {
                    <p>Logging out...</p>
                    <form method="post" id="logout-form">
                        <input type="hidden" name="logoutId" value="@Model.LogoutId" />
                    </form>
                    <script>
                        document.getElementById('logout-form').submit();
                    </script>
                }
            </div>
        </div>
    </div>
</div>

